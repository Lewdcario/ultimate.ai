{
	"main": "dist/app.js",
	"scripts": {
		"test": "yarn build && NODE_ENV=test mocha -r dotenv/config --require ts-node/register ./__tests__/*",
		"test:coverage": "NODE_ENV=test nyc mocha -r dotenv/config --require ts-node/register ./__tests__/*",
		"dev": "tsc --watch",
		"run": "node .",
		"build": "rimraf ./dist && swc ./src --out-dir dist && npx tsoa routes && yarn copy-data",
		"docs": "yarn build && npx @redocly/cli build-docs ./dist/routes/swagger.json -o ./docs/index.html",
		"start": "yarn build && yarn run run",
		"lint": "eslint --ext .ts",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"copy-data": "rsync -avm --include='*.json' --include='*/' --exclude='*' ./src/ ./dist/"
	},
	"dependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.94",
		"ajv": "^8.12.0",
		"body-parser": "^1.20.2",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"mongo-seeding": "^3.7.2",
		"mongoose": "^7.6.3",
		"node-fetch": "2",
		"swagger-ui-express": "^5.0.0",
		"tsoa": "^5.1.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@redocly/cli": "^1.3.0",
		"@types/chai": "^4.3.9",
		"@types/express": "^4.17.19",
		"@types/mocha": "^10.0.3",
		"@types/node": "^20.8.6",
		"@types/node-fetch": "^2.6.6",
		"@types/sinon": "^10.0.20",
		"@types/supertest": "^2.0.14",
		"@types/swagger-ui-express": "^4.1.5",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"chai": "^4.3.10",
		"eslint": "^8.51.0",
		"mocha": "^10.2.0",
		"mongodb-memory-server": "^9.0.1",
		"nyc": "^15.1.0",
		"prettier": "^3.0.3",
		"sinon": "^17.0.0",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
